@page
@model ProductAchat.Pages.Produits.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Custom CSS for the Delete page */
    h1 {
        font-size: 2.5rem;
        margin-top: 20px;
    }

    h3 {
        font-size: 1.8rem;
        margin-top: 20px;
    }

    .card {
        border: 1px solid #e1e1e1;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="card">
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.prix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.imageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Produit.imageUrl" alt="Product Image" class="img-fluid" />
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Produit.id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
